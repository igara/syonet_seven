{
  "verbose": true,
  "ignore": ["node_modules", ".next"],
  "watch": [
    "actions/**/*",
    "components/**/*",
    "libs/**/*",
    "models/**/*",
    "pages/**/*",
    "resolvers/**/*",
    "server/**/*",
    "states/**/*",
    "stores/**/*",
    "styles/**/*",
    "server.ts"
  ],
  "exec": "ts-node -r tsconfig-paths/register --project server.tsconfig.json server.ts",
  "ext": "js ts tsx css"
}
