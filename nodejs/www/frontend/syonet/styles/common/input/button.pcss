.button {
	overflow: hidden;
	font-size: 2vh;
	background-color: #ebffe7;
	border-radius: 2vw;
	outline: 0;
	cursor: pointer;
}

.button:active {
	background-color: #ffffff;
}

.button a {
	padding: 1vh;
	display: block;
	text-decoration: none;
	color: #000000;
}

.button span {
	padding: 1vh;
	display: block;
	text-decoration: none;
	color: #000000;
}
