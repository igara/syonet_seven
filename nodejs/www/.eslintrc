{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true,
		"jest/globals": true
	},
	"globals": {
		"m": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:flowtype/recommended",
		"prettier",
		"plugin:prettier/recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"plugins": ["flowtype", "jest"],
	"rules": {
		"flowtype/define-flow-type": 1,
		"flowtype/use-flow-type": 1,
		"linebreak-style": ["error", "unix"],
		"no-console": 0,
		"rest-spread-spacing": ["error", "never"],
		"jsx": true,
		"no-unused-vars": [
			1,
			{
				"vars": "all",
				"args": "none",
				"varsIgnorePattern": "m"
			}
		],
		"react/jsx-uses-vars": 2,
		"react/react-in-jsx-scope": "off",
		"react/no-unknown-property": [
			2,
			{
				"ignore": ["class", "onclick"]
			}
		],
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"trailingComma": "all",
				"useTabs": true,
				"semi": false
			}
		]
	}
}
